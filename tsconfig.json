{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": ["es2016", "es2017", "esnext.asynciterable", "dom"]
  },
  "include": ["src/**/*"]
}
